@model VillaWebApp.Models.DTO.VillaNumberDTO

<form asp-action="DeleteVillaNumber">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr/>
        
        <input type="hidden" asp-for="VillaNo"/>
        <div class="row">

            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="VillaNo" class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="VillaId" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="VillaId" class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="SpecialDetails" class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="VillaNumber" asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control"/>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
